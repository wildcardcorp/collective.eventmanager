<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.eventmanager">

<body>

<div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="size python:here.getObjSize(here);
                       content_type here/get_content_type|here/Format;
                       kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading">
            Event EMail Sender
        </h1>

        <div tal:condition="python: view.showMessageEMailSent()">
            Successfully sent the email(s)
        </div>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <form action='emailsenderform' method='POST'>
            <div>
                <input type='radio' name='emailtype' value='announcement' />
                <label for='emailtype'>Announcement</label>
                <input type='radio' name='emailtype' value='confirmation' />
                <label for='emailtype'>Confirmation</label>
                <input type='radio' name='emailtype' value='other' />
                <label for='emailtype'>Other</label>
            </div>
            <div>
                <label for='emailfromaddress'>EMail Address to Send EMail From</label>
                <input type='text' name='emailfromaddress' />
            </div>
            <div>
                <label for='emailtoaddresses'>EMail Addressess to Send EMail To</label>
                <div>enter one address per line</div>
                <textarea name='emailtoaddresses'><p tal:replace='python: view.registrationEMailList()'/></textarea>
            </div>
            <div>
                <label for='emailsubject'>EMail Subject</label>
                <input type='text' name='emailsubject' />
            </div>
            <div>
                <label for='emailadditionalbody'>EMail Message (in addition to default value)</label>
                <textarea type='text' name='emailadditionalbody'></textarea>
            </div>
            <div>
                <label for='attachment1'>Attachment 1</label>
                <input type='file' name='attachment1' />
            </div>
            <div>
                <label for='attachment2'>Attachment 2</label>
                <input type='file' name='attachment2' />
            </div>
            <div>
                <label for='attachment3'>Attachment 3</label>
                <input type='file' name='attachment3' />
            </div>
            <div>
                <label for='attachment4'>Attachment 4</label>
                <input type='file' name='attachment4' />
            </div>
            <div>
                <input type='submit' name='submit' value='Send EMail' />
            </div>
        </form>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</div>

</body>

</html>
