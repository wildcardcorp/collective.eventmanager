<object name="portal_actions"
        meta_type="Plone Actions Tool"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">
    <action-provider name="portal_actions"
                     i18n:domain="plone">
        <action title="Payment Settings"
                action_id="buyable"
                category="object"
                condition_expr="python:path('object/@@getpaid_control').isPayable()"
                url_expr="string:${object_url}/@@edit-payable"
                visible="False"
                i18n:attributes="title">
            <permission>Modify portal content</permission>
        </action>
    </action-provider>
    <object name="object_buttons"
            meta_type="CMF Action Category">
        <object name="exportreg"
                meta_type="CMF Action"
                i18n:domain="collective.eventmanager">
            <property name="title" i18n:translate="">Export Registrations</property>
            <property name="description" i18n:translate=""></property>
            <property name="url_expr">string:$object_url/@@export-registrations</property>
            <property name="link_target"></property>
            <property name="icon_expr"></property>
            <property name="available_expr">object/@@export-registrations-allowed|nothing</property>
            <property name="permissions">
                <element value="Add Portal Content" />
            </property>
            <property name="visible">True</property>
        </object>
    </object>
</object>
