    <record field="certificate_pdf_template"
            interface="collective.eventmanager.certificatepdftemplates.ICertificatePDFTemplateSettings"
            name="collective.eventmanager.certificatepdftemplates.ICertificatePDFTemplateSettings.certificate_pdf_template">
        <field type="plone.registry.field.Text">
            <title>Certificate PDF Template</title>
        </field>
        <value>
&lt;%def name="makecssfor(regid)"&gt;
            size: letter landscape;
            @frame {
                top: 0cm;
                left: 0cm;
                height: 21cm;
                width: 27.94cm;
                margin-top: 6cm;
            }
            @frame back {
                -pdf-frame-content: ${regid}back;
                top: 1.75cm;
                left: 1cm;
                margin-right: 1cm;
                margin-bottom: 1cm;
            }
            @frame header {
                -pdf-frame-content: ${regid}header;
                margin-top: 3.25cm;
            }
            @frame bottom {
                -pdf-frame-content: ${regid}bottom;
                margin-top: 16cm;
                margin-right: 3cm;
                margin-left: 11cm;
                padding-top: .1cm;
            }
            @frame footer {
                -pdf-frame-content: ${regid}footer;
                margin-top: 13.5cm;
                margin-left: 3cm;
            }
&lt;/%def&gt;
&lt;%def name="makehtmlfor(reg, regid)"&gt;
    &lt;div class='pagewrapper'&gt;
        &lt;div id="${regid}header" class='header'&gt;
        % if certtitle != '':
            &lt;h1 class='certtitle'&gt;${certtitle}&lt;/h1&gt;
        % endif
        &lt;/div&gt;

        &lt;div id="${regid}content" class='content'&gt;
        % if certsubtitle != '':
            &lt;h2 class='certsubtitle'&gt;${certsubtitle}&lt;/h2&gt;
        % else:
            % if underlines_for_empty_values:
            &lt;div class='certsubtitle'&gt;${'_'*51&lt;/div&gt;
            % else:
            &lt;div class='certsubtitle'&gt;${' '*51}&lt;/div&gt;
            % endif
        % endif
        % if certprenamedesc != '':
            &lt;p class='certprenamedesc'&gt;${certprenamedesc}&lt;/p&gt;
        % else:
            % if underlines_for_empty_values:
            &lt;div class='certprenamedesc'&gt;${'_'*39}&lt;/div&gt;
            % else:
            &lt;div class='certprenamedesc'&gt;${' '*39}&lt;/div&gt;
            % endif
        % endif

            &lt;div class='regname'&gt;${reg.title}&lt;/div&gt;

        % if certpostnamedesc != '':
            &lt;p class='certpostnamedesc'&gt;${certpostnamedesc}&lt;/p&gt;
        % else:
            % if underlines_for_empty_values:
            &lt;div class='certpostnamedesc'&gt;${'_'*39}&lt;/div&gt;
            % else:
            &lt;div class='certpostnamedesc'&gt;${' '*39}&lt;/div&gt;
            % endif
        % endif
        % if certawardtitle != '':
            &lt;p class='certawardtitle'&gt;${certawardtitle}&lt;/p&gt;
        % else:
            % if underlines_for_empty_values:
            &lt;div class='certawardtitle'&gt;${'_'*47}&lt;/div&gt;
            % else:
            &lt;div class='certawardtitle'&gt;${' '*47}&lt;/div&gt;
            % endif
        % endif

        % if certdate == '' and not underlines_for_empty_values:
            &lt;p class='certdate'&gt; &lt;span class='certdatevalue'&gt;&lt;/span&gt;&lt;/p&gt;
        % else:
            &lt;p class='certdate'&gt;Awarded On 
            % if certdate != '':
                &lt;span class='certdatevalue'&gt;${certdate}&lt;/span&gt;
            % else:
                &lt;span class='certdatevalue_empty'&gt;________ / ________ / ________&lt;/span&gt;
            % endif
            &lt;/p&gt;
        % endif

        &lt;div id="${regid}bottom"&gt;
            &lt;div class='signatureContent'&gt;
                % if underlines_for_empty_values:
                ${'_'*40}
                % else:
                ${' '*40}
                % endif
                &lt;br /&gt;
            % if certsigdesc != '':
                &lt;p class='certsigdesc'&gt;${certsigdesc.replace("\n", "&lt;br /&gt;")}&lt;/p&gt;
            % endif
            &lt;/div&gt;
        &lt;/div&gt;

        &lt;div id="${regid}footer" class='footer'&gt;
            &lt;img height='6cm' width='6cm' src='${portal_url}/++resource++goldenseal.png' /&gt;
        &lt;/div&gt;

        &lt;div id='${regid}back'&gt;
            &lt;img height='100%' src='${portal_url}/++resource++certificate-border-${certborder}.png' /&gt;
        &lt;/div&gt;
    &lt;/div&gt;
&lt;/%def&gt;

&lt;html&gt;
&lt;head&gt;
    &lt;title&gt;Event Certificates&lt;/title&gt;
    &lt;style type='text/css'&gt;
        % if len(registrations) &gt; 0:
        @page {
            ${makecssfor(registrations[0].getId().replace('-',''))}
        }
        % endif
        % for reg in registrations[1:]:
        @page ${reg.getId().replace('-','')}page {
            ${makecssfor(reg.getId().replace('-',''))}
        }
        % endfor

        .header {
            text-align: center;
            font-size: 1.2cm;
            font-style: italic;
            font-family: Georgia;
        }

        .content,
        .bottom {
            font-family: "Times New Roman";
            font-size: .45cm;
        }

        .content {
            text-align: center;
        }

        .certsubtitle {
            font-size: .8cm;
        }

        .certsubtitle_empty {
            font-size: .8cm;
        }

        .regname,
        .certawardtitle {
            font-size: .65cm;
            font-weight: bold;
        }

        .certdatevalue {
            text-decoration: underline;
            font-weight: bold;
        }
        .certdatevalue_empty {
            font-weight: bold;
        }

        .signatureContent {
            text-align: right;
            padding-top: .1cm;
        }

        .footer {
            text-align: left;
        }
    &lt;/style&gt;
&lt;/head&gt;
&lt;body&gt;

% if len(registrations) &gt; 0:
    ${makehtmlfor(registrations[0], registrations[0].getId().replace('-',''))}
% endif

% for reg in registrations[1:]:
    &lt;pdf:nextpage/&gt;
    &lt;pdf:nexttemplate name="${reg.getId().replace('-','')}page"/&gt;

    ${makehtmlfor(reg, reg.getId().replace('-',''))}
% endfor

&lt;/body&gt;
&lt;/html&gt;
